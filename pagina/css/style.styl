footer
    background rgba(35,128,147,1)
    height 400px
    margin-top 2em
    width 100%
//parte de productos
.menu
    display block
    @media screen and (orientation: landscape)
        display inline-block
        margin-top 40px
        padding 1em
        vertical-align top
        width 30%
    a:visited
        color #333
    ul
        list-style none
        margin 0 
        padding 0
        li
            background #1e3c90
            border 1px solid #e1e1e1
            border-radius 5px
            color #e1e1e1
            display block
            &:hover
                cursor pointer
            h3 
                margin-left 1em
            ul
                li
                    background #e1e1e1
                    border-bottom 1px solid #eee
                    border-radius 0
                    color #333
                    padding .5em 0 .5em 2em
                    a
                        color#333
                        display block
                        height 100%
.tabla
    display block
    text-align center
    width 100%
    @media screen and (orientation: landscape)
        display inline-block
        vertical-align top
        width 65%
    .tablero
            display flex
            flex-wrap wrap
            justify-content space-around 
        .tarjeta
            display block
            border-bottom 1px solid #e1e1e1
            margin-bottom 3em
            @media screen and (orientation: landscape)
                display inline-block
                vertical-align top
                width 40%
            a
                color #333
                &:visited
                    color #333
.producto
    display block
    @media screen and (orientation: landscape)
        color #333
        display inline-block
        vertical-align top
        width 65%
    .tipo
        border-bottom 1px solid #e3e3e3
        display block
        height 40px
        margin 0 2em 1em 2em
        h2
            display inline-block
        h3
            display inline-block
            margin 0
            float right
    .derecha
        display block
        @media screen and (orientation: landscape)
            display inline-block
            vertical-align top
            padding 1em 0 0 1em
            width 300px
        .identificacion
            h2
                text-align left
            h4
                margin 0
    .tabs
        margin 0
        padding 0
        .pestanas
            border 1px solid #e1e1e1 
            display inline-block
            height 50px
            line-height 50px
            vertical-align top
            a
                display inline-block
                height 100%
                padding 0 1em
        .active
            background-color #1e3c90
            color #e1e1e1
    .articulos
        border 1px solid #e1e1e1
        display block
        padding 0 2em 2em 2em
        box-shadow inset 1px 1px 5px #e1e1e1
        article
            display block
            width 100%
            margin 0
            h2
                text-align left
                margin 1em 0 0.3em 0
            p
                margin 0