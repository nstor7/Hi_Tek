@import url(https://fonts.googleapis.com/css?family=Exo+2)

//generales
body
    font-size 16px
    
a
    margin 0
    padding 0
    text-decoration none
    &:hover
        cursor pointer
h1
    margin 0
    padding 0
    font-family 'Oswald', sans-serif
    font-size 3em
    
h2
    margin 0
    padding 0
    font-family 'Titillium Web', sans-serif
    font-size 2em

h3, h4, h5
    font-family 'Titillium Web', sans-serif
    margin 0
    font-size 1.5em
    
p, li
    font-family 'Exo 2', sans-serif
    font-size  1em

//template
.top
    background #333
    height 50px
    .item
        display inline-block
        vertical-align top
    .logo
        background #e1e1e1
        border-radius 50%
        height 50px
        margin 0
        padding 10px
        position relative
        transition all .3s linear
        width 50px
        z-index 100
        @media screen and (orientation: landscape)
            height 70px
            width 70px
            &:hover
                height 90px
                width 90px
        img
            height 100%
    .responsive
        display none
        @media screen and (orientation: landscape)
            display inline-block
            position static
            width: auto
            height 50px
    nav
        background #333 
        box-sizing border-box
        display: block
        padding-left 1em
        position absolute
        top 50px
        width 100%
        @media screen and (orientation: landscape)
            display none
        ul
            list-style none
            margin 0
            padding 0
            li
                border-bottom 1px solid #e1e1e1
                line-height 50px
                @media screen and (orientation: landscape)
                    border-bottom none  
                    display inline-block
                    width 90px
                    vertical-align top
                    text-align center
                    height 100%
                a
                    color #e1e1e1
                    font-family 'Titillium Web', sans-serif
                    display block
                    height 100%
                    transition all .3s linear
                    &:hover
                        font-size 1.2em
    aside 
        height 50px
        line-height 50px
        position absolute
        right 4em
        top 0
        a
            color #e1e1e1
            font-size 1em
        .bandera
            height 25px
    .icon-menu
        color #e1e1e1
        display inline-block
        font-size 2em
        position absolute
        right 0.5em
        @media screen and (orientation: landscape)
            display none
            
